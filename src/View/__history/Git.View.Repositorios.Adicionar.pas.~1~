unit Git.View.Repositorios.Adicionar;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm2 = class(TForm)
    Panel1: TPanel;
    Button1: TButton;
    Edit1: TEdit;
    Edit2: TEdit;
    Button2: TButton;
    OpenDialog1: TOpenDialog;
  private
    function GitFolderExists: Boolean;
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

uses FileCtrl;

function TForm2.GitFolderExists: Boolean;
var
  LSR: TSearchRec;
  LRetcode: integer;
  LFolderGit: String;
begin
  with TFileOpenDialog.Create(nil) do
  try
    Options := [fdoPickFolders];
    if Execute then LFolderGit:= FileName;
    SelectDirectory('Selecione um diretório GIT', '', LFolderGit);
    LRetcode := FindFirst(LFolderGit+'\*.*', faAnyFile, LSR);
    while LRetcode = 0 do
      begin
        if LSR.Name = '.git' then break;
        retcode := FindNext(LSR);
      end;
    FindClose(SR);
  finally
    Free;
  end;

end;

end.
