unit Git.View.Repositorios.Adicionar;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm2 = class(TForm)
    Panel1: TPanel;
    Button1: TButton;
    Edit1: TEdit;
    Edit2: TEdit;
    Button2: TButton;
    OpenDialog1: TOpenDialog;
    procedure Button1Click(Sender: TObject);
  private
    function GitFolderExists: Boolean;
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

uses FileCtrl;

procedure TForm2.Button1Click(Sender: TObject);
begin
  GitFolderExists;
end;

function TForm2.GitFolderExists: Boolean;
var
  LSR: TSearchRec;
  LRetcode: integer;
  LFolderGit: String;
begin
  result:= False;
  with TFileOpenDialog.Create(nil) do
  try
    Options := [fdoPickFolders];
    if Execute then LFolderGit:= FileName;
    //SelectDirectory('Selecione um diretório Git', '', LFolderGit);
    LRetcode := FindFirst(LFolderGit+'\*.*', faAnyFile, LSR);
    while LRetcode = 0 do
      begin
        if LSR.Name = '.git' then
        begin
          result:= True;
          break;
        end;
        LRetcode := FindNext(LSR);
      end;
    FindClose(LSR);
  finally
    Free;
  end;

end;

end.
